{
  "builds": [
    {
      "src": "host/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "host/dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/host/dist/index.html" }
  ]
}
